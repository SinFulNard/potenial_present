<% if current_user?(list_item.user) %>
	<%= link_to "edit", edit_present_path(list_item), class: "btn btn-mini" %>
  <%= link_to "delete", list_item, method: :delete, data: { confirm: "You sure?" }, title: list_item.content, class: "btn btn-mini" %>
  <%= simple_form_for :present, url: present_path(list_item), method: 'put' do |f| %>
	  <%= f.hidden_field :purchased, value: "1" %>
    <%= f.button :submit, "I own it!", class: "btn btn-mini buy", title: "Click here to mark this link as owned"%>
	<% end %>
<% else %>
	<% if signed_in? %>
		<% if list_item.ordered != 1 %>
			<%= simple_form_for :present, url: present_path(list_item), method: 'put' do |f| %>
				<%= f.hidden_field :ordered, value: "1" %>
				<%= f.button :submit, "ordered it", class: "btn btn-mini newOrder", title: "Click here to mark this link as ordered" %>
			<% end %>
		<% else %>
			<%= link_to "ordered", '#', class: "btn btn-mini disabled alreadyOrder", title: "This link has already been marked ordered" %>
		<% end %>
	<% end %>
<% end %>
