<% if current_user?(list_item.user) %>
	<%= link_to "edit", edit_present_path(list_item), class: "btn btn-mini" %>
  <%= link_to "delete", list_item, method: :delete, data: { confirm: "You sure?" }, title: list_item.content, class: "btn btn-mini" %>
	<% if list_item.purchased != 1 %>
	  <%= simple_form_for :present, url: present_path(list_item), method: 'put' do |f| %>
		  <%= f.hidden_field :purchased, value: "1" %>
	    <%= f.button :submit, "I own it!", class: "btn btn-mini tip-info", title: "Click here to mark this link as owned"%>
		<% end %>
	<% end %>
<% else %>
	<% if signed_in? %>
		<% if list_item.ordered != 1 && list_item.purchased != 1 %>
			<%= simple_form_for :present, url: present_path(list_item), method: 'put' do |f| %>
				<%= f.hidden_field :ordered, value: "1" %>
				<%= f.button :submit, "ordered", class: "btn btn-mini tip-info", title: "Click here to mark this link as ordered" %>
			<% end %>
		<% elsif list_item.purchased == "1" %>
			<%= link_to "received", '#', class: "btn btn-mini disabled tip-info", title: "This link has already been purchased" %>
		<% else %>
			<%= link_to "ordered", '#', class: "btn btn-mini disabled tip-info", title: "This link has already been ordered" %>
		<% end %>
	<% end %>
<% end %>
