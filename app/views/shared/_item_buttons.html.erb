<% if current_user?(list_item.user) %>
	<%= link_to raw('<i class="icon-pencil"></i>'), edit_present_path(list_item), class: "edit", title: "Edit this entry" %>
  <%= link_to raw('<i class="icon-trash"></i>'), list_item, method: :delete, data: { confirm: "You sure?" }, title: "Delete this entry", class: "delete" %>
	<% if list_item.purchased != 1 %>
	  <%= simple_form_for :present, url: present_path(list_item), method: 'put' do |f| %>
		  <%= f.hidden_field :purchased, value: "1" %>
	    <%= f.submit "owned", class: "btn btn-mini tip-info", title: "Mark this link as owned"%>
		<% end %>
	<% else %>
		<%= link_to raw('<i class="icon-ok-sign"></i>'), '#', class: "tip-info", title: "You have this!" %>
	<% end %>
<% else %>
	<% if list_item.ordered != 1 && list_item.purchased != 1 %>
		<%= simple_form_for :present, url: present_path(list_item), method: 'put' do |f| %>
			<%= f.hidden_field :ordered, value: "1" %>
			<%= f.button :submit, "ordered", class: "btn btn-mini tip-info", title: "Mark this link as ordered" %>
		<% end %>
	<% elsif list_item.purchased == "1" %>
		<%= link_to raw('<i class="icon-exclamation-sign"></i>'), '#', class: "tip-info", title: "Link has already been purchased" %>
	<% else %>
		<%= link_to raw('<i class="icon-warning-sign"></i>'), '#', class: "tip-info", title: "Link has already been ordered" %>
	<% end %>
<% end %>
