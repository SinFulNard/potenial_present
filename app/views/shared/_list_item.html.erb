<div class="present span6 offset1 capsule" id="<% if list_item.purchased == "1" %>have<% else %>want<% end %>">
	<ul id="<%= list_item.id %>">
		<span class="content">
			<% if list_item.purchased == "0" %>
				<strong>
					<% if current_user?(list_item.user) %>
						<%= link_to "You", list_item.user %>
					<% else %>
						<%= link_to list_item.user.name, list_item.user %>
					<% end %>
						 would love a <%= link_to list_item.content, list_item %></strong><font color="#999"> - <%= time_ago_in_words(list_item.created_at) %> ago</font>
			<% else %>
				<strong><%= link_to list_item.user.name, list_item.user %> received a <%= link_to list_item.content, list_item %></strong><font color="#999"> - <%= time_ago_in_words(list_item.updated_at) %> ago</font>
			<% end %>
			<b class="caret" id="pointDown"></b>
	  </span>
		<div class="details">
			<% if list_item.purchased == "0" %>
				Purchase 
			<% else %>
				Purchased 
			<% end %>
			
			from <%= link_to "here", list_item.link, target: "_blank" %> for roughly $<%= list_item.cost %>.
			
			<% if current_user?(list_item.user) %>
		 		<%= link_to "edit", edit_present_path(list_item), class: "btn btn-mini" %> 
		    <%= link_to "delete", list_item, method: :delete, data: { confirm: "You sure?" }, title: list_item.content, class: "btn btn-mini" %>
				<%= simple_form_for :present, url: edit_present_path(list_item) do |f| %>
					<%= f.hidden_field :purchased, value: "1" %>
	        <%= f.button :submit, "bought", class: "btn btn-mini" %>
        <% end %>
		  <% end %>
		</div>
	</ul>
</div>
