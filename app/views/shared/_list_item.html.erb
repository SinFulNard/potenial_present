<li id="<%= list_item.id %>">
	<span class="content">
		<%= link_to list_item.user.name, list_item.user %> potentially wants a <%= link_to list_item.content, list_item %> <font color="#999"> - <%= time_ago_in_words(list_item.created_at) %> ago.</font>
		<% if current_user?(list_item.user) %>
	    <%= link_to "delete", list_item, method: :delete, data: { confirm: "You sure?" }, title: list_item.content %>
	  <% end %>
  </span>
</li>

