<h1>Listing presents</h1>

<table>
  <tr>
    <th>Content</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @presents.each do |present| %>
  <tr>
    <td><%= present.content %></td>
    <td><%= present.user_id %></td>
    <td><%= link_to 'Show', present %></td>
    <td><%= link_to 'Edit', edit_present_path(present) %></td>
    <td><%= link_to 'Destroy', present, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

