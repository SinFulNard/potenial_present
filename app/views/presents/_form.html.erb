<%= simple_form_for @present, html: { class: "form-horizontal" } do |f| %>
	<%= render 'shared/error_messages', object: f.object %>

	<%= f.input :content, label: 'Present name' %>
	<%= f.input :cost, label: 'Price' %>
	<%= f.input :link, label: 'Link to present' %>
	<%= f.input :purchased, as: :boolean %>

	<%= f.button :submit, "List", class: "btn btn-small" %>
<% end %>
